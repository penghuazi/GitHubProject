<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!-- mysql-connector-java.jar 路径一般为当前用户的 .m2 目录下：${user.dir}/.m2/repository/.... -->
    <classPathEntry
            location="C:/Users/dell-pc/.m2/repository/mysql/mysql-connector-java/5.1.38/mysql-connector-java-5.1.38.jar"/>

    <context id="ormgenerator" targetRuntime="MyBatis3">

        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/>

        <!-- TODO -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 连接声明，此处使用 properties 配置的变量名 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/socket"
                        userId="sonar"
                        password="sonar"/>

        <!-- TODO -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--生成数据表对应的model-->
        <javaModelGenerator targetProject="C:/GitHubProject/GitHubProject/SocketDemo/src/main/java"
                            targetPackage="com.legend.dao.domain">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- SqlMap XML Files -->
        <sqlMapGenerator targetProject="C:/GitHubProject/GitHubProject/SocketDemo"
                         targetPackage="./src/main/resources/mapper">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成 Mapper java文件，targetProject 指定的目录需存在，MBG 不会自动创建 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetProject="C:/GitHubProject/GitHubProject/SocketDemo/src/main/java"
                             targetPackage="com.legend.dao">
            <property name="enableSubPackages" value="true"/>
            <property name="exampleMethodVisibility" value="false"/>
            <property name="methodNameCalculator" value="com.legend.MethodNameGenerator"/>
        </javaClientGenerator>

        <!-- 表生成映射，tableName 支持通配符，此处使用"%"表示所有表 -->
        <table schema="MySQL" tableName="ammeter_working_info" enableSelectByExample="false" enableDeleteByExample="false"
               enableCountByExample="false" enableUpdateByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>

